<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/request_image"
                    android:layout_width="70dp"
                    android:layout_gravity="center_horizontal"
                    app:civ_border_color="@color/primary"
                    app:civ_border_width="3dp"
                    android:layout_height="70dp"
                    android:src="@drawable/user"/>
                <TextView
                    android:id="@+id/request_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" View request"
                    android:drawableBottom="@drawable/ic_request"
                    android:drawableTint="@color/primary"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:textSize="16dp" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/request_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elmasha Omon"
                    android:textColor="@color/secondary"
                    android:textSize="16dp"
                    />


                <TextView
                    android:id="@+id/request_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="elmashavitran@gmail.com"
                    android:textColor="@color/secondary"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/request_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3444565"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="18dp" />




                <TextView
                    android:id="@+id/request_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Nairobi"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawableTint="@color/secondary"
                    android:textColor="@color/secondary"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/request_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Nairobi"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:textColor="@color/primary"
                    android:textSize="16dp" />







            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>