<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Service.FinderProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_blue"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/LogOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:drawableRight="@drawable/ic_logout"
                    android:drawableTint="@color/ColorRed"
                    android:text="LogOut  "
                    android:textColor="@color/ColorRed"
                    android:textSize="17dp"
                    android:textStyle="bold" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Tf_userImage"
                    android:layout_width="120dp"
                    app:civ_fill_color="@color/primary"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/secondary"
                    app:civ_border_width="3dp" />







            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/editLayout"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_height="wrap_content">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/edit_Tf_profile"
                    android:layout_width="wrap_content"
                    app:fab_icon="@drawable/ic_edit"
                    app:fab_size="mini"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:fab_colorNormal="@color/secondary"
                    app:fab_colorPressed="@color/secondary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"/>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/PrimeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    >




                    <TextView
                        android:id="@+id/Tf_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawableTint="@color/primary"
                        android:text="Elmasha Omon"
                        android:textColor="@color/secondary"
                        android:textSize="19dp"
                        />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    >





                    <TextView
                        android:id="@+id/Tf_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:drawableLeft="@drawable/ic_mail"
                        android:drawableTint="@color/primary"
                        android:text=" elmashavitran@gmail.com"
                        android:textColor="@color/secondary"
                        android:textSize="17dp" />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    >




                    <TextView
                        android:id="@+id/Tf_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3444565"
                        android:layout_gravity="end"
                        android:drawableLeft="@drawable/ic_phone_24"
                        android:drawableTint="@color/primary"
                        android:textColor="@color/secondary"
                        android:textSize="18dp" />







                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    >






                    <TextView
                        android:id="@+id/Tf_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text=" Nairobi"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawableTint="@color/primary"
                        android:textColor="@color/secondary"
                        android:textSize="17dp" />




                </LinearLayout>











            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/EditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/closeEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:drawableLeft="@drawable/ic_close_40"
                        android:drawableTint="@color/ColorRed"
                        android:layout_margin="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >




                        <EditText
                            android:id="@+id/edit_Tf_name"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textStyle="bold"
                            android:drawableRight="@drawable/ic_person"
                            android:drawableTint="@color/primary"
                            android:text="Elmasha Omon"
                            android:textColor="@color/secondary"
                            android:textSize="19dp"
                            />




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >





                        <EditText
                            android:id="@+id/edit_Tf_email"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:drawableRight="@drawable/ic_mail"
                            android:drawableTint="@color/primary"
                            android:text=" elmashavitran@gmail.com"
                            android:textColor="@color/secondary"
                            android:textSize="17dp" />




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >




                        <EditText
                            android:id="@+id/edit_Tf_phone"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="3444565"
                            android:layout_gravity="end"
                            android:drawableRight="@drawable/ic_phone_24"
                            android:drawableTint="@color/primary"
                            android:textColor="@color/secondary"
                            android:textSize="18dp" />







                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >






                        <EditText
                            android:id="@+id/edit_Tf_location"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text=" Nairobi"
                            android:drawableRight="@drawable/ic_location"
                            android:drawableTint="@color/primary"
                            android:textColor="@color/secondary"
                            android:textSize="17dp" />









                    </LinearLayout>


                    <Button
                        android:id="@+id/edit_Tf_saveChanges"
                        android:layout_width="300dp"
                        android:text="Save changes"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:textSize="18dp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_round_green"
                        android:layout_height="wrap_content"/>








                </LinearLayout>
            </androidx.core.widget.NestedScrollView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active workers"
                    android:layout_margin="10dp"
                    android:textColor="@color/primary"
                    android:textSize="19dp"
                    android:textStyle="bold" />



                <FrameLayout
                    android:id="@+id/FrameProfile"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_height="160dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_active_jobs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>