<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/LablePay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Rate service provider"
            android:layout_marginTop="15dp"
            android:textSize="23dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/primary"
            android:textStyle="bold"/>


        <com.hsalf.smileyrating.SmileyRating
            android:id="@+id/ratingBarProvider"
            android:layout_margin="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/review_input"
                android:layout_width="270dp"
                android:maxLines="10"
                android:background="@drawable/border_grey_edit"
                android:minLines="5"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="18dp"
                android:gravity="top|left"
                android:layout_gravity="center_horizontal"
                android:hint=""
                android:layout_marginLeft="7dp" />







        <Button
            android:id="@+id/Rating_done"
            android:layout_width="170dp"
            android:background="@drawable/btn_round_green"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:text=" Submit Rating "
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
             />




        <ProgressBar
            android:id="@+id/progress_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
           />




    </LinearLayout>

</LinearLayout>