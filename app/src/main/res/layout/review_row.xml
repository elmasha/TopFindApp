<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/review_row_image"
                android:layout_width="60dp"
                android:src="@drawable/user"
                android:layout_margin="8dp"
                android:layout_height="60dp"/>
            <RatingBar
                android:id="@+id/ratingBarReview"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:scaleX=".9"
                android:scaleY=".9"
                android:rating="4"
                android:progressBackgroundTint="@color/grey"
                android:stepSize="0.2"
                />


        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/review_row_name"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_margin="5dp"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>










            <TextView
                android:id="@+id/review_row_date"
                android:layout_width="wrap_content"
                android:text=" 3/33/3 "
                android:drawableLeft="@drawable/ic_time_20"
                android:layout_marginStart="5dp"
                android:textColor="@color/lightGrey"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>



            <LinearLayout
                android:layout_width="260dp"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/bg_white_review"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/review_row_comment"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:maxLines="20"
                    android:minLines="3"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

</FrameLayout>