<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Provider.ViewRequestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_blue"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/BackToProfile"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_west"
                android:layout_margin="26dp"
                android:layout_height="wrap_content"/>




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="vertical"
                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/TpView_userImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/primary"
                    app:civ_border_width="3dp" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/TpView_name"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:text="Elmasha Omond"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:textColor="@color/secondary"
                            android:textSize="16dp"
                            />


                        <TextView
                            android:id="@+id/TpView_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="elmashavitran@gmail.com"
                            android:textColor="@color/secondary"
                            android:textSize="15dp" />



                        <TextView
                            android:id="@+id/TpView_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="073444565"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/secondary"
                            android:textSize="16dp" />


                        <TextView
                            android:id="@+id/TpView_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Nairobi"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawableTint="@color/secondary"
                            android:textColor="@color/secondary"
                            android:textSize="16dp" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_margin="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/TpView_Cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Decline "
                            android:layout_margin="8dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/secondary"
                            android:textSize="18dp" />


                        <Button
                            android:id="@+id/TpView_Accept"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:text="Accept"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_margin="8dp"
                            android:textAllCaps="false"
                            android:background="@drawable/btn_round_blue"
                            android:textColor="@color/primary"
                            android:textSize="16dp" />







                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>








    </LinearLayout>

</androidx.core.widget.NestedScrollView>