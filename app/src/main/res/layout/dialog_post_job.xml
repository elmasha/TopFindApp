<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="7dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/ProfessionRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableTint="@color/primary"
                    android:text="Post a job"
                    android:textColor="@color/primary"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/input_post_job"
                    android:layout_width="300dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Write something..."
                    android:maxLines="10"
                    android:drawableRight="@drawable/ic_write"
                    android:background="@drawable/border_grey_edit"
                    android:minLines="7"
                    android:padding="5dp"
                    android:gravity="top"
                    android:layout_height="wrap_content"/>





                    <TextView
                        android:id="@+id/choose_cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select category"
                        android:textStyle="bold"
                        android:drawableTint="@color/primary"
                        android:textColor="@color/primary"
                        android:textSize="19dp" />




                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="70dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cat_post"
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:layout_height="match_parent"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/cat_of_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:textSize="19dp" />




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Btn_postJob"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:text="Post"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="8dp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_round_blue"
                        android:textColor="@color/primary"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/CancelJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel "
                        android:layout_margin="8dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="@color/secondary"
                        android:textSize="21dp" />




                </LinearLayout>









            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>