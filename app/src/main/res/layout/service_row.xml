<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/row_image"
                android:layout_width="80dp"
                android:layout_margin="5dp"
                android:layout_height="80dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary"
                android:src="@drawable/user" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/row_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elamsha Omondi"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/secondary"
                    android:textSize="19dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/row_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/lightGrey"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/row_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/lightGrey"
                    android:textSize="16dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content">


                    <RatingBar
                        android:id="@+id/ratingBarShop"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:scaleX=".9"
                        android:scaleY=".9"
                        android:rating="4"
                        android:progressBackgroundTint="@color/grey"
                        android:stepSize="0.2"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/primary"
                        android:textSize="18dp"
                        android:text="View profile"/>

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        app:fab_size="mini"
                        android:layout_gravity="end"
                        app:fab_colorNormal="@color/secondary"
                        app:fab_colorPressed="@color/secondary"
                        app:fab_icon="@drawable/ic_arrowforward"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>