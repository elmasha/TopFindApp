<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Provider.ProviderProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/LogOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:drawableRight="@drawable/ic_logout"
                    android:drawableTint="@color/ColorRed"
                    android:text="LogOut  "
                    android:textColor="@color/ColorRed"
                    android:textSize="17dp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    >


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/Tp_userImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/user"
                        app:civ_border_color="@color/primary"
                        app:civ_border_width="3dp" />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >


                        <TextView
                            android:id="@+id/Tp_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elmasha Omon"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            />


                        <TextView
                            android:id="@+id/Tp_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="elmashavitran@gmail.com"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/Tp_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3444565"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="170dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/primary"/>


                        <TextView
                            android:id="@+id/Tp_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Nairobi"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawableTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="16dp" />



                    </LinearLayout>

                </LinearLayout>








            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    app:fab_icon="@drawable/ic_edit"
                    app:fab_size="mini"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:fab_colorNormal="@color/secondary"
                    app:fab_colorPressed="@color/secondary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:src="@drawable/worker"
                        android:layout_height="35dp"/>
                    <TextView
                        android:id="@+id/Tp_profession"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginStart="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary"
                        android:textSize="18dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Narration"
                        android:layout_margin="10dp"
                        android:textColor="@color/primary"
                        android:textSize="19dp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/Tp_narration"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxLines="20"
                        android:minLines="4"
                        android:textColor="@color/lightGrey"
                        android:textSize="18dp" />







                </LinearLayout>










                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Jobs"
                        android:layout_margin="10dp"
                        android:textColor="@color/primary"
                        android:textSize="19dp"
                        android:textStyle="bold" />



                    <FrameLayout
                        android:id="@+id/FrameProfile"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_current_jobs"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                        </androidx.recyclerview.widget.RecyclerView>

                    </FrameLayout>





                </LinearLayout>











            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>